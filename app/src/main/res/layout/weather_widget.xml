<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_widget_background"
    android:orientation="vertical"
    android:alpha="0.5">

    <!-- Top Row -->
    <LinearLayout
        android:id="@+id/top_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- First tile -->
        <LinearLayout
            android:id="@+id/tile1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/app_widget_inner_view_background"
            android:onClick="openMainActivity">

            <TextView
                android:id="@+id/tile1_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Temperature: 22Â°C"/>

        </LinearLayout>

        <!-- Second tile -->
        <LinearLayout
            android:id="@+id/tile2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/app_widget_inner_view_background"
            android:onClick="openGraphActivity">

            <TextView
                android:id="@+id/tile2_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Humidity: 45%"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Row -->
    <LinearLayout
        android:id="@+id/bottom_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Third tile -->
        <LinearLayout
            android:id="@+id/tile3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/app_widget_inner_view_background"
            android:onClick="openMainActivity">

            <TextView
                android:id="@+id/tile3_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Wind Speed: 12 km/h"/>

        </LinearLayout>

        <!-- Fourth tile -->
        <LinearLayout
            android:id="@+id/tile4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/app_widget_inner_view_background"
            android:onClick="openGraphActivity">

            <TextView
                android:id="@+id/tile4_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Precipitation: 25%"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>